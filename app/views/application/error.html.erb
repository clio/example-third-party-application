<div class="container">
  <div class="card">
    <div class="card-header">
      <h3>Oops! Something went wrong.</h3>
      <a href="/" class="button">
        Back to Sign In
      </a>
    </div>
    <div class="card-body">
      <p><%= error_message %></p>

      <% if error_info.present? %>
        <h4>Error Info:</h4>
        <pre><%= JSON.pretty_generate(error_info) %></pre>
      <% end %>
    </div>
  </div>
</div>
